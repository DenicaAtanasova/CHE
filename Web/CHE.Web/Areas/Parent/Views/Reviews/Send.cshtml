@model CHE.Web.InputModels.Reviews.ReviewSendInputModel

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Reviews" asp-action="Send">
            <h4>Send review</h4>
            <hr />
            <div class="form-group">
                <h5><label asp-for="Rating"></label><span id="rating-value">: 0 / 5</span></h5>
                <div class="rating">
                    <input type="radio" asp-for="Rating" id="star1" value="5"><label for="star1"></label>
                    <input type="radio" asp-for="Rating" id="star2" value="4"><label for="star2"></label>
                    <input type="radio" asp-for="Rating" id="star3" value="3"><label for="star3"></label>
                    <input type="radio" asp-for="Rating" id="star4" value="2"><label for="star4"></label>
                    <input type="radio" asp-for="Rating" id="star5" value="1"><label for="star5"></label>
                </div>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label asp-for="Comment"></label></h5>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ReceiverId" type="hidden" />
            </div>
            <div class="form-group d-flex justify-content-lg-between">
                <div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
                <div>
                    <a class="btn btn-primary" asp-controller="Teachers" asp-action="Details" asp-route-id="@Model.ReceiverId">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/star-rating.css" />
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/rating.js"></script>
}