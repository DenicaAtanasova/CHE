@using Microsoft.AspNetCore.Identity
@using CHE.Data.Models

@inject UserManager<CheUser> UserManager
@model CHE.Web.InputModels.Cooperatives.CooperativeUpdateInputModel
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <ol>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Cooperatives" asp-action="All">Cooperatives</a></li>
            <li><a asp-area="" asp-controller="Cooperatives" asp-action="Details" asp-route-id="@Model.Id">Details</a></li>
            <li>Update</li>
        </ol>
        <h2>Update </h2>
    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Update Section ======= -->
<section id="services" class="services">
    <div class="container">
        <form method="post" asp-controller="Cooperatives" asp-action="Update">
            <h4>Update cooperative</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <input asp-for="CreatorId" value="@UserManager.GetUserId(User)" class="form-control" hidden />
                    <input asp-for="CreatedOn" type="datetime" value="@Model.CreatedOn" class="form-control" hidden />
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Grade"></label>
                        <select asp-for="Grade" class="form-control">
                            <option>@Model.Grade</option>
                            <vc:grades-list current-grade="@Model.Grade"></vc:grades-list>
                        </select>
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Info"></label>
                        <textarea asp-for="Info" class="form-control"></textarea>
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address.City"></label>
                        <input asp-for="Address.City" class="form-control" />
                        <span asp-validation-for="Address.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address.Neighbourhood"></label>
                        <input asp-for="Address.Neighbourhood" class="form-control" />
                        <span asp-validation-for="Address.Neighbourhood" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address.Street"></label>
                        <input asp-for="Address.Street" class="form-control" />
                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-che">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</section><!-- End Update Section -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
