@model CHE.Web.InputModels.Cooperatives.CooperativeCreateInputModel
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <ol>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Cooperatives" asp-action="All">Cooperatives</a></li>
            <li>Create</li>
        </ol>
        <h2>Create </h2>

    </div>
</section><!-- End Breadcrumbs -->

<!-- ======= Create Section ======= -->
<section id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form method="post" asp-controller="Cooperatives" asp-action="Create">
                    <h4>Create new cooperative</h4>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Info"></label>
                        <textarea asp-for="Info" class="form-control"></textarea>
                        <span asp-validation-for="Info" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Grade"></label>
                        <select asp-for="Grade" class="form-control">
                            <option selected disabled>-- Choose grade --</option>
                            <vc:grades-list current-grade=""></vc:grades-list>
                        </select>
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-lg-between">
                        <div>
                            <button type="submit" class="btn btn-che">Create</button>
                        </div>
                        <div>
                            <a class="btn btn-che" asp-area="" asp-controller="Cooperatives" asp-action="All">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section><!-- End Create Section -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
