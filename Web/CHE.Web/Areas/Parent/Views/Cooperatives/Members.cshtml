@model CHE.Web.ViewModels.Cooperatives.CooperativeMembersViewModel
@{
    Layout = "/Views/Shared/_LayoutCooperative.cshtml";
    var membersCount = 1;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Role</th>
            <th scope="col" colspan="2">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members)
        {
            <tr>
                <th scope="row">@(membersCount++)</th>
                <td scope="row">@member.UserName</td>
                <td scope="row">@member.Role</td>
                @if (Model.AdminUserName == this.User.Identity.Name)
                {
                    <td><a class="btn btn-che btn-sm" 
                           asp-area="Parent" 
                           asp-controller="Cooperatives" 
                           asp-action="RemoveMember" 
                           asp-route-cooperativeId="@member.CooperativeId" 
                           asp-route-memberId="@member.UserId">Remove</a></td>
                }
            </tr>
        }
    </tbody>
</table>
