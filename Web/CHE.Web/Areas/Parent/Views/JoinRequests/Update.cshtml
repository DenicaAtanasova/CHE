@model CHE.Web.InputModels.JoinRequests.JoinRequestUpdateInputModel
@{
    var data = new Dictionary<string, string>
    {
        { "cooperativeId", Model.CooperativeId },
        { "requestId", Model.Id }
    };
}
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <ol>
            <li><a asp-area="" asp-controller="Cooperatives" asp-action="All">Cooperatives</a></li>
            <li><a asp-area="" asp-controller="Cooperatives" asp-action="Details" asp-route-id="@Model.CooperativeId">Details</a></li>
            <li>Join Request</li>
        </ol>
        <h2>Join Request </h2>
    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Create Section ======= -->
<section id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form method="post" asp-area="Parent" asp-controller="JoinRequests" asp-action="Update">
                    <h4>Send join request</h4>
                    <hr />
                    <input asp-for="CooperativeId" type="hidden" />
                    <input asp-for="CreatedOn" type="datetime" hidden />
                    <input asp-for="SenderId" hidden />
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-che">Save changes</button>
                        <a class="btn btn-che" asp-controller="JoinRequests" asp-action="Delete" asp-all-route-data="@data">Delete</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}