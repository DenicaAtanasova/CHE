@model CHE.Web.InputModels.JoinRequests.JoinRequestCreateInputModel

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-area="Parent" asp-controller="JoinRequests" asp-action="Send">
            <h4>Send request to join</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ReceiverId" type="hidden" />
            </div>
            @if (Model.CooperativeId == null)
            {
                <partial name="_SendTeacherPartial" model="@Model"/>
            }
            else
            {
                <partial name="_SendCooperativePartial" model="@Model" />
            }
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
