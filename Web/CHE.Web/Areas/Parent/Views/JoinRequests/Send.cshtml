@model CHE.Web.InputModels.JoinRequests.JoinRequestCreateInputModel
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <ol>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            @if (Model.CooperativeId == null)
            {
                <li><a asp-area="" asp-controller="Teachers" asp-action="All">Teachers</a></li>
                <li><a asp-area="" asp-controller="Teachers" asp-action="Details" asp-route-id="@Model.ReceiverId">Details</a></li>
            }
            else
            {
                <li><a asp-area="" asp-controller="Cooperatives" asp-action="All">Cooperatives</a></li>
                <li><a asp-area="" asp-controller="Cooperatives" asp-action="Details" asp-route-id="@Model.CooperativeId">Details</a></li>
            }
            <li>Join Request</li>
        </ol>
        <h2>Join Request </h2>
    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Create Section ======= -->
<section id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form method="post" asp-area="Parent" asp-controller="JoinRequests" asp-action="Send">
                    <h4>Send join request</h4>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    @if (Model.CooperativeId == null)
                    {
                        <input asp-for="ReceiverId" type="hidden" />
                        <div class="form-group">
                            <select asp-for="CooperativeId" class="form-control">
                                <option selected disabled>-- Choose cooperative --</option>
                                <vc:cooperatives-list user-id="@User.GetId()"></vc:cooperatives-list>
                            </select>
                            <span asp-validation-for="CooperativeId" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <input asp-for="CooperativeId" type="hidden" />
                        </div>
                    }
                    <div class="form-group">
                        <button type="submit" class="btn btn-che">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
