@model CHE.Web.ViewModels.JoinRequests.JoinRequestDetailsViewModel
@{ 
    var data = new Dictionary<string, string>
    {
        { "cooperativeId", Model.CooperativeId },
        { "requestId", Model.Id },
        { "senderUsername", Model.SenderUserName}
    };
}

<div class="jumbotron">
    <h3 class="display-4">Request to join</h3>
    <p class="lead">From: <strong>@Model.SenderUserName</strong></p>
    <hr class="my-4">
    <p>@Model.Content</p>
    <hr class="my-4">
    <div class="d-flex justify-content-lg-between">
        <div>
            <a class="btn btn-primary btn-lg" >Accept</a>
        </div>
        <div>
            <a class="btn btn-primary btn-lg" asp-controller="Cooperatives" asp-action="RejectRequest" asp-all-route-data="@data" >Reject</a>
        </div>
    </div>
</div>