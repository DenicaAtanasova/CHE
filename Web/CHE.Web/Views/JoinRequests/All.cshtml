@model CHE.Web.ViewModels.JoinRequests.JoinRequestTeacherAllListVIewModel
@{
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
    var requestsCount = 1;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Cooperative</th>
            <th scope="col" colspan="2">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.JoinRequests)
        {
            <tr>
                <th scope="row">@(requestsCount++)</th>
                <td colspan="2">@request.CooperativeName</td>
                <td><a class="btn btn-che btn-sm" asp-area="" asp-controller="JoinRequests" asp-action="Details" asp-route-id="@request.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
