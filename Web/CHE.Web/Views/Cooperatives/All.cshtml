@using CHE.Web.ViewModels;
@model PaginatedList<CHE.Web.ViewModels.Cooperatives.CooperativeAllViewModel>
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <ol>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li>Cooperatives</li>
        </ol>
        <h2>Cooperatives</h2>
    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Services Section ======= -->
<section id="services" class="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <button id="filter-btn" class="btn btn-che">filter</button>
                <div id="filter-tab">
                    <h1>Filter</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var cooperative in Model)
            {
                <div class="card col-lg-4 col-md-6 d-flex align-items-stretch mt-4">
                    <a asp-controller="Cooperatives" asp-action="Details" asp-route-id="@cooperative.Id">
                        <div class="icon-box">
                            <div class="icon"><i class="icofont-users-alt-5"></i></div>
                            <h4>@cooperative.Name</h4>
                            <p>@cooperative.Info</p>
                        </div>
                    </a>
                    <div class="card-footer d-flex justify-content-between">
                        <div><strong>Grade: </strong>@cooperative.Grade</div>
                    </div>
                </div>
            }
        </div>  
        <vc:pagination page-index="@Model.PageIndex" has-previous-page="@Model.HasPreviousPage" has-next-page="@Model.HasNextPage"></vc:pagination>        
    </div>
</section><!-- End Services Section -->
