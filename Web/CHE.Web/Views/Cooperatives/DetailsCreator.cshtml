@model CHE.Web.ViewModels.Cooperatives.CooeprativeDetailsViewModel
@{
    var requestsCount = 1;
    var membersCount = 1;
}

    <div class="jumbotron">
        <h1 class="display-4">@Model.Name</h1>
        <p class="lead">@Model.Info</p>
        <hr class="my-4">
        <div class="row" style="height: 250px">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Home</a>
                    <a class="list-group-item list-group-item-action" id="list-members-list" data-toggle="list" href="#list-members" role="tab" aria-controls="memebers">Members</a>
                    <a class="list-group-item list-group-item-action" id="list-requests-list" data-toggle="list" href="#list-requests" role="tab" aria-controls="requests">Requests</a>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                        <div class="d-flex">
                            <div class="p-2 flex-fill">
                                <h5>Info</h5>
                                <hr />
                                <div><strong>Creator: </strong>@Model.CreatorUserName</div>
                                <div><strong>Grade: </strong>@Model.Grade</div>
                                <div><strong>Members count: </strong>@Model.MembersCount</div>
                            </div>
                            <div class="p-2 flex-fill">
                                <h5>Address</h5>
                                <hr />
                                <div><strong>City: </strong>@Model.Address?.City</div>
                                <div><strong>Neighbourhood: </strong>@Model.Address?.Neighbourhood</div>
                                <div><strong>Street: </strong>@Model.Address?.Street</div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade overflow-auto" id="list-members" role="tabpanel" aria-labelledby="list-memebers-list" style="height: 250px">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Role</th>
                                    <th scope="col" colspan="2">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.Members)
                                {
                                    <tr>
                                        <th scope="row">@(membersCount++)</th>
                                        <td scope="row">@member.UserName</td>
                                        <td scope="row">@member.Role</td>
                                        <td><a class="btn btn-primary btn-sm" asp-area="Parent" asp-controller="Cooperatives" asp-action="RemoveMember" asp-route-cooperativeId="@member.CooperativeId" asp-route-memberId="@member.UserId">Remove</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade overflow-auto" id="list-requests" role="tabpanel" aria-labelledby="list-requests-list" style="height: 250px">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Username</th>
                                    <th scope="col" colspan="2">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.JoinRequestsReceived)
                                {
                                    <tr>
                                        <th scope="row">@(requestsCount++)</th>
                                        <td colspan="2">@request.SenderUserName</td>
                                        <td><a class="btn btn-primary btn-sm" asp-controller="JoinRequests" asp-action="Details" asp-route-id="@request.Id">Details</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-lg-between">
            <div>
                <a class="btn btn-primary btn-lg" asp-controller="Schedules" asp-action="Details" asp-route-id="@Model.ScheduleId">Schedule</a>
            </div>
            <div>
                
            </div>
        </div>
        <hr class="my-4">
        <div class="d-flex justify-content-lg-between">
            <div>
                <a class="btn btn-primary btn-lg" asp-area="Parent" asp-controller="Cooperatives" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#deleteConfirm">
                    Delete
                </button>
            </div>
            <div>
                <a class="btn btn-primary btn-lg" asp-controller="Cooperatives" asp-action="All">Back</a>
            </div>
        </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete cooperative</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>Name: <strong>@Model.Name</strong></h5>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" asp-area="Parent" asp-controller="Cooperatives" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>